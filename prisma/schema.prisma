datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Tag {
  Filmy
  Delulu
  Artify
  Drip
  Viral
}

enum AITool {
  Gemini
  ChatGPT
}

model Prompt {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  prompt          String
  tag             Tag
  aiTool          AITool
  proTip          String?
  instagramHandle String?
  twitterHandle   String?
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
